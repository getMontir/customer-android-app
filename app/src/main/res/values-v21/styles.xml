        <item name="android:elevation">0dp</item>
    </style>

    <style name="Widget.GetMontir.Toolbar.Dark" parent="Widget.MaterialComponents.Toolbar.PrimarySurface">
        <item name="android:background">#0B2031</item>
        <item name="titleTextColor">@color/white_50</item>
