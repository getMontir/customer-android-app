<resources xmlns:tools="http://schemas.android.com/tools" xmlns:ns2="http://schemas.android.com/apk/res-auto">

    <!--Components-->

    <!--Bottom Sheets-->
    <style name="ThemeOverlay.GetMontir.BottomSheetDialog" parent="ThemeOverlay.MaterialComponents.Dialog">
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowAnimationStyle">@style/Animation.MyTheme.BottomSheet.Modal</item>
        <item name="bottomSheetStyle">@style/Widget.GetMontir.BottomSheet.Modal</item>
        <item name="android:navigationBarDividerColor" tools:ignore="NewApi">@android:color/transparent</item>
    </style>
    <style name="Widget.GetMontir.BottomSheet.Modal" parent="Widget.MaterialComponents.BottomSheet.Modal">
        <item name="shapeAppearanceOverlay">?attr/shapeAppearanceLargeComponent</item>
    </style>

    <style name="Theme.GetMontir.Button" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="shapeAppearance">@style/ShapeAppearance.GetMontir.Button</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Theme.GetMontir.Button.OutlinedButton" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="shapeAppearance">@style/ShapeAppearance.GetMontir.Button</item>
    </style>

    <style name="Theme.GetMontir.Button.OutlinedButton.Icon">
        <item name="android:paddingLeft">18dp</item>
        <item name="iconTint">@color/transparent</item>
        <item name="iconTintMode">add</item>
        <item name="android:textColor">#9098b1</item>
    </style>

    <style name="Theme.GetMontir.TextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="materialThemeOverlay">@style/ThemeOverlay.GetMontir.TextInputLayout</item>
        <item name="shapeAppearance">@style/ShapeAppearance.MyTheme.SmallComponent</item>
        <item name="hintTextColor">#385084</item>
        <item name="boxStrokeColor">@color/bg_input_border</item>
        <item name="boxBackgroundColor">@color/bg_input_background</item>
        <item name="android:insetLeft">20dp</item>
        <item name="hintTextAppearance">@style/Theme.GetMontir.HintTextAppearance</item>
    </style>

    <style name="Theme.GetMontir.HintTextAppearance" parent="TextAppearance.Design.Hint">
        <item name="android:textStyle">bold</item>
    </style>

    <!--Navigation Drawer-->
    <style name="Widget.GetMontir.NavigationView" parent="Widget.MaterialComponents.NavigationView">
        <item name="itemTextAppearance">?attr/textAppearanceBody2</item>
    </style>

    <style name="ThemeOverlay.GetMontir.TextInputLayout" parent="">
        <item name="editTextStyle">@style/ThemeOverlay.GeMontir.TextInputEditText</item>
    </style>

    <style name="ThemeOverlay.GeMontir.TextInputEditText" parent="Widget.MaterialComponents.TextInputEditText.FilledBox">
<!--        <item name="editTextBackground">@drawable/bg_input_edit</item>-->
    </style>

    <style name="ThemeOverlay.GetMontir.CheckBox" parent="Widget.MaterialComponents.CompoundButton.CheckBox">
    </style>

    <style name="Widget.GetMontir.Toolbar.White" parent="Widget.MaterialComponents.Toolbar.PrimarySurface">
        <item name="android:background">@color/white_50</item>
        <item name="titleTextColor">@color/primaryColor</item>
    </style>

</resources>
